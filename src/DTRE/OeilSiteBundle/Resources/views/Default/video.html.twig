



{% extends "DTREOeilSiteBundle::layout.html.twig" %}

{% block title %}
    {{ parent() }} Video
{% endblock %}

{% block bundle_body %}
    <div class="page-header">
        <h1>Video</h1>
    </div>
    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">Streaming Video</h3>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-6">
                    <img src="http://192.168.1.81:8090/?action=stream" />
                </div>
                <div class="col-md-6">
                    <button type="button" class="glyphicon glyphicon-arrow-left" id="left">Gauche</button>
                    <button type="button" class="glyphicon glyphicon-arrow-right" id="right">Droite</button>
                    <button type="button" class="glyphicon glyphicon-arrow-up" id="up">Haut</button>
                    <button type="button" class="glyphicon glyphicon-arrow-down" id="down">Bas</button>
                    <button type="button" class="glyphicon glyphicon-hand-left" id="up-left">Haut-Gauche</button>
                    <button type="button" class="glyphicon glyphicon-hand-right" id="up-right">Haut-Droite</button>
                    <button type="button" class="glyphicon glyphicon-hand-up" id="down-left">Bas-Gauche</button>
                    <button type="button" class="glyphicon glyphicon-hand-down" id="down-right">Bas-Droit</button>
                    <button type="button" class="glyphicon glyphicon-screenshot" id="center">Centrer</button></p>
                    <button type="button" class="glyphicon glyphicon-flash" aria-hidden="true" id="light-on">Allumer</button>
                    <button type="button" class="glyphicon glyphicon-off" aria-hidden="true" id="light-off">Eteindre</button></p>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block bundle_javascript %}

    {{ parent() }}
    <script src="{{ asset('http://192.168.1.27:8080/socket.io/socket.io.js') }}"></script>

    <script type="text/javascript" src="{{ asset('assets/js/video_control.js') }}"></script>

{% endblock %}
