{% block bundle_javascript %}

    <script type="text/javascript">
        // initialisation de l'api google pour les graphiques linéaires
        google.charts.load('current', {'packages':['line']});

        function getDayData(i, ch, d) {
            $.getJSON("http://localhost/oeildtrepst3/web/app_dev.php/sensors/"+i+"/data/day", function(result){
                d = result;
                google.charts.setOnLoadCallback(drawDayChart(ch,d));
            });
        }
        function drawDayChart(ch,d) {
            var data = new google.visualization.DataTable();
            data.addColumn('date', 'Day');
            data.addColumn('number', 'Température');

            $.each(d, function(i, field){
                console.log(field["value"]);
                console.log(field["date"]);
                data.addRow([new Date(field["date"]),field["value"]]);
            });

            var options = {
                chart: {
                    title: 'Température dans la DTRE',
                    subtitle: 'en degré Celsius'
                },
                width: 900,
                height: 500
            };

            // Instantiate and draw our chart, passing in some options.
            var chart = new google.charts.Line(document.getElementById(ch));
            chart.draw(data, options);
        }
        var daydata1;
        var daydata2;
        var daydata3;
        var daydata4;

        getDayData(17,"chart1",daydata1);
        getDayData(18,"chart2",daydata2);
        getDayData(19,"chart3",daydata3);
        getDayData(20,"chart4",daydata4);


    </script>
{% endblock %}