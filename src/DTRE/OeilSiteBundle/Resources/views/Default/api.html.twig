{% extends "DTREOeilSiteBundle::layout.html.twig" %}

{% block title %}
    {{ parent() }}
{% endblock %}

{% block bundle_body %}
    <div class="page-header">
        <h1>Activation de l'API</h1>
    </div>

    {% for key, messages in app.session.flashbag.all() %}
        {% for message in messages %}
            <div class="alert alert-{{ key }}">
                {{ message|trans({}, 'FOSUserBundle') }}
            </div>
        {% endfor %}
    {% endfor %}

    <br>
    <br>
    <a class="btn btn-success" id="Valider">Create Api Account
    </a>

    {{ include("DTREOeilSiteBundle:Template:modal_register.html.twig") }}

{% endblock %}


{% block bundle_javascript %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            var IP = "https://oeildtapi.hanotaux.fr/api";
            console.log("DANS JS");
            $("#Valider").click(function () {
                    $("#modalP").modal();
            });
            $("#save").on('click', (function (e) {
                e.preventDefault();
                pass = $('#dtre_oeilsitebundle_user_apiToken').val();
                console.log(pass);
                createAccount(pass);
                $("#modalP").modal('hide');
                return false;
            }));

            function createAccount(password) {
                $.ajax({
                    url: IP + "/users",
                    type: "POST",
                    data: {
                        login: "{{ user.username }}",
                        mail: "{{ user.email }}",
                        plainpassword: password
                    },
                    dataType: 'json',
                    success: function (result) {
                        console.log("success");
                        console.log(result);
                        id = result.id;
                        saveIdApi(id);

                    },
                    error: function (result) {
                        console.log(result);
                        console.log("Erreur creation POST /users");
                    }
                });
            }

            function saveIdApi(id) {
                $.ajax({
                    url: "/oeil/api-id",
                    type: 'POST',
                    dataType: 'json',
                    data: {
                        id: id
                    },
                    success: function(result) {
                        console.log(result);



                    },
                    error: function(result) {
                        console.log(result);
                        console.log("Erreur sauve POST /oeil/api-id");
                    }
                });
            }
        });
    </script>
{% endblock %}
